set $bg-color #000000
set $text-color #f3f4f5
#}}} 
#{{{ Configuring button in Variable
set $mod Mod4
set $ALT Mod1
#}}} 
#{{{ Keybinding System
#kill focused window
bindsym $ALT+F4				exec i3 kill
bindsym $mod+Shift+r		exec i3 restart &&		echo #sourced i3
bindsym Print 				exec scrot && i3-nagbar -t warning -m 'Screenshot'
bindsym F7 exec "$(xinput list-props $(xinput | grep Synaptics | grep -o '=..' | sed 's/=//g') | grep -qE \\"Device Enabled.*1$\\" && xinput disable $(xinput | grep Synaptics | grep -o '=..' | sed 's/=//g') || xinput enable $(xinput | grep Synaptics | grep -o '=..' | sed 's/=//g') && i3 restart)" && echo #mouse toggle (disable and enable mode)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Logoff the user' -b 'Yes, exit i3' 'i3-msg exit'" && echo	#logs you out
# bind to calculator
#bindsym $mod+d exec $HOME/.i3/i3scripts/calc.sh
# bind with crypto
#bindsym $mod+a exec $HOME/.i3/i3scripts/rofi_crypto.sh
#lost phone indicater
#bindsym $mod+Shift+l exec $HOME/.python-env/pyicloud/bin/python3 $HOME/.i3/i3scripts/icloud_play_sound.py && i3-nagbar -t warning -m "Finding Phone"
#bindsym $mod+Escape exec "$(xinput list-props $(xinput | grep Synaptics | grep -o '=..' | sed 's/=//g') | grep -qE \\"Device Enabled.*1$\\" && xinput disable $(xinput | grep Synaptics | grep -o '=..' | sed 's/=//g') || xinput enable $(xinput | grep Synaptics | grep -o '=..' | sed 's/=//g') && i3 restart)"
bindsym $mod+q exec i3lock -c 000000	&& echo		#i3lock
bindsym F1 exec i3lock -c 000000		&& echo		#i3lock
#}}}
#{{{ Keybinding fn keys
#{{{ Pulse Audio controls
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle # mute sound
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- #decrease sound volume
#bindsym F11 exec --no-startup-id amixer -D pulse sset Master 5%- #decrease sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ #increase sound volume
#bindsym F12 exec --no-startup-id amixer -D pulse sset Master 5%+ #increase sound volume
#}}}
#{{{ Sreen brightness controls
#bindsym XF86MonBrightnessUp exec xbacklight -inc 1 # increase screen brightness
#bindsym XF86MonBrightnessDown exec xbacklight -dec 1 # decrease screen brightness
bindsym XF86MonBrightnessUp exec sudo chmod a+rw /sys/class/backlight/intel_backlight/brightness && echo 700 > /sys/class/backlight/intel_backlight/brightness # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo chmod a+rw /sys/class/backlight/intel_backlight/brightness && echo 1 > /sys/class/backlight/intel_backlight/brightness # increase screen brightness
# nightmode
bindsym $mod+F4 exec "pkill redshift || redshift"
#}}}
#}}}
